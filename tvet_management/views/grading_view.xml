<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record id="view_grading_policy_tree" model="ir.ui.view">
            <field name="name">grading.policy.tree</field>
            <field name="model">grading.policy</field>
            <field name="type">tree</field>
            <field name="priority" eval="8"/>
            <field name="arch" type="xml">
            <tree string="Exam Type" editable="bottom">
                <field name="minimum"/>
                <field name="maximum"/>
                <field name="grade"/>
                <field name="gpa"/>
                <field name="decision"/>
                <field name="is_medical"/>
            </tree>
            </field>
        </record>

