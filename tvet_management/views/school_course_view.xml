<?xml version="1.0"?>
<odoo>

    <!-- Courses -->
    <record id="view_school_course_tree" model="ir.ui.view">
        <field name="name">school.course.tree</field>
        <field name="model">school.course</field>
        <field name="arch" type="xml">
            <tree string="Courses">
                <field name="name"/>
                <field name="department_id"/>
            </tree>
        </field>
    </record>

    <record id="view_school_course_form" model="ir.ui.view">
        <field name="name">school.course.form</field>
        <field name="model">school.course</field>
        <field name="arch" type="xml">
            <form string="Procedure Group">
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                        </group>
                        <group>
                            <field name="department_id"/>
                        </group>
                    </group>
                    <group>
                        <field name="remarks"/>
                    </group>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers"/>
                    <field name="activity_ids" widget="mail_activity"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
            </form>
        </field>
    </record>

     <record id="view_school_course_search" model="ir.ui.view">
        <field name="name">school.course.search</field>
        <field name="model">school.course</field>
        <field name="arch" type="xml">
            <search string="Course">
                <field name="name"/>
                <field name="department_id"/>
            </search>
        </field>
    </record>

    <record id="action_school_course" model="ir.actions.act_window">
        <field name="name">Course</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">school.course</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                No Record Found
            </p>
            <p>
                Click to add new Course.
            </p>
        </field>
    </record>




</odoo>