<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record id="view_student_relationship_tree" model="ir.ui.view">
            <field name="name">student.relationship.tree</field>
            <field name="model">student.relationship</field>
            <field name="type">tree</field>
            <field name="priority" eval="8"/>
            <field name="arch" type="xml">
            <tree string="Student Relationship">
                <field name="name"/>
            </tree>
            </field>
        </record>
        
        <record id="view_student_relationship_form" model="ir.ui.view">
            <field name="name">student.relationship.form</field>
            <field name="model">student.relationship</field>
            <field name="type">form</field>
            <field name="priority" eval="8"/>
            <field name="arch" type="xml">
                <form string="Student Relationship">
                    <sheet>
                        <group>
                            <group>
                                <field name="name" select="1"/>
                            </group>
                        </group>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="activity_ids" widget="mail_activity"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>
        
        <record id="view_student_relationship_search" model="ir.ui.view">
            <field name="name">student.relationship.search</field>
            <field name="model">student.relationship</field>
            <field name="type">search</field>
            <field name="priority" eval="8"/>
            <field name="arch" type="xml">
            <search string="Student Relationship">
                <field name="name" select="True"/>
            </search>
            </field>
        </record>
        
        <record model="ir.actions.act_window" id="act_open_student_relationship_view">
            <field name="name">Student Relationship</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">student.relationship</field>
            <!-- <field name="view_type">form</field> -->
            <field name="view_mode">tree,form</field>
            <field name="search_view_id" ref="view_student_relationship_search"/>
            <field name="domain">[]</field>
            <field name="context">{}</field>
        </record>
        
        <record model="ir.actions.act_window.view" id="act_open_student_relationship_view_form">
            <field name="act_window_id" ref="act_open_student_relationship_view"/>
            <field name="sequence" eval="20"/>
            <field name="view_mode">form</field>
            <field name="view_id" ref="view_student_relationship_form"/>
        </record>
        
        <record model="ir.actions.act_window.view" id="act_open_student_relationship_view_tree">
            <field name="act_window_id" ref="act_open_student_relationship_view"/>
            <field name="sequence" eval="10"/>
            <field name="view_mode">tree</field>
            <field name="view_id" ref="view_student_relationship_tree"/>
        </record>
    </data>
</odoo>
